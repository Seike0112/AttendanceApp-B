<div class="container">
    <h1>拠点情報追加</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @base, url: bases_path, local: true) do |f| %>
        
        <%= f.label :base_id, class: "label-#{yield(:class_text)}" %>
        <%= f.text_field :base_id, class: "form-control" %>
        
        <%= f.label :base_name, class: "label-#{yield(:class_text)}" %>
        <%= f.text_field :base_name, class: "form-control" %>
        
        <%= f.label :attendance_typ, class: "label-#{yield(:class_text)}" %>
        <%= f.text_field :attendance_typ, class: "form-control" %>
        <br>
        <%= f.submit "拠点の登録", class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
        
      <% end %> 
    </div>
  </div>
    
</div>
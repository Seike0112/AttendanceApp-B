<div class="container">
    <h1>拠点情報追加</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @base, url: bases_path, local: true) do |f| %>
      
        <% if @base.errors.any? %>
          <div id="error_explanation">
            <div class="alert alert-danger">
              入力エラーが<%= @base.errors.count %>件ありました
            </div>
            <ul>
              <% @base.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <%= f.label :base_id, class: "label-#{yield(:class_text)}" %>
        <%= f.text_field :base_id, class: "form-control" %><br>
        
        <%= f.label :base_name, class: "label-#{yield(:class_text)}" %>
        <%= f.text_field :base_name, class: "form-control" %><br>
        
        <%= f.label :attendance_typ, class: "label-#{yield(:class_text)}" %><br>
        <%= f.select :attendance_typ,  [['出勤', 0], ['退勤', 1]], class: "form-control" %><br>
        <br>
        <%= f.submit "拠点の登録", class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %><br>
        
        
      <% end %> 
    </div>
  </div>
    
</div>
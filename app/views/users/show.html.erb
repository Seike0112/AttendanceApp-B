<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed" id="table-attendances">
    <tr class="user-table">
      <td><%= link_to "◀️", user_path(date: @first_day.prev_month), class: "table-show btn btn-sm btn-default btn-primary" %>　<%= l(@first_day, format: :middle) %>  勤怠管理表　<%= link_to "▶️", user_path(date: @first_day.next_month), class: "btn btn-sm btn-default  btn-primary" %></td>
      <td colspan="2">指定勤務時間　<%= format_basic_info(@user.work_time) %></td>
      <td colspan="2">基本時間　<%= format_basic_info(@user.basic_time) %></td>
      <td>初日　<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr class="user-table">
      <td>所属　<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名　<%= @user.name %></td>
      <td>コード</td>
      <td>0921</td>
      <td>出勤日数　<%= @worked_sum %>日</td>
      <td>締め　<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div class="btn-users-show">
  <%= link_to "勤怠の編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-default  btn-primary" %>
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="2">日付</th>
        <th rowspan="2">曜日</th>
        <th colspan="3">出勤</th>
        <th colspan="3">退勤</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="3">備考</th>
        <th rowspan="3">残業指示</th>
        <th rowspan="3">指示者</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td>
            <% if day.worked_on.wday == 6 %>
              <font color="blue">土</font>
            <% elsif day.worked_on.wday == 0 %>
              <font color="red">日</font>
            <% elsif day.worked_on.wday == 1 %>
              <font color="black">月</font>
            <% elsif day.worked_on.wday == 2 %>
              <font color="black">火</font>
            <% elsif day.worked_on.wday == 3 %>
              <font color="black">水</font>
            <% elsif day.worked_on.wday == 4 %>
              <font color="black">木</font>
            <% elsif day.worked_on.wday == 5 %>
              <font color="black">金</font>
            <% end %>            
          </td>
          <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
          <td><%= l(day.started_at.floor_to(15.minutes), format: :minit) if day.started_at.present? %></td>
          <td>
            <% if day.worked_on == Date.today && day.started_at.nil? %>
              <%= button_to "出社", user_attendance_path(@user, day), method: :patch, class: "btn btn-default btn-block btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
          <td><%= l(day.finished_at.floor_to(15.minutes), format: :minit) if day.finished_at.present? %></td>
          <td>
            <% if day.worked_on == Date.today && day.started_at.present? && day.finished_at.blank? %>
              <%= button_to "退社", user_attendance_path(@user, day), method: :patch, class: "btn btn-default btn-block btn-primary btn-attendance" %>
            <% end %>  
          </td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>

    <tfoot class="bordered">
      <tr>
        <td colspan = "2"><%= @attendances.count %></td>
        <td colspan = "6"><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
        <td><%= format("%.2f", @total_working_times.to_f) %></td>
        <td></td>
        <td></td>
        <td>所属長承認</td>
      </tr>
    </tfoot>
 
  </table>
</div>